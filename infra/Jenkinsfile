pipeline {
  agent any
  stages {
    stage('aws and eksctl version') {
      steps {
        withAWS(region:'us-east-2', credentials:'eks-docker-hub') {
          sh 'aws --version'
          sh 'eksctl version'
        }
      }
    }
    stage('Create K8S Cluster') {
      steps {
        withAWS(region:'us-east-2', credentials:'eks-docker-hub') {
          sh '''
            eksctl create cluster \
	      --name prodtest \
	      --version 1.16 \
	      --region us-east-2 \
	      --nodegroup-name standard-workers \
	      --node-type t2.micro \
	      --nodes 3 \
	      --nodes-min 1 \
              --nodes-max 4 \
              --region us-east-2 \
              --zones us-east-2a \
              --zones us-east-2b \
              --zones us-east-2c \
	      --managed
          '''
        }
      }
    }
    stage('Update K8S Config') {
      steps {
        withAWS(region:'us-east-2', credentials:'eks-docker-hub') {
          sh 'aws eks --region us-east-2 update-kubeconfig --name prodtest'
        }            
      }
    }
  }
}
